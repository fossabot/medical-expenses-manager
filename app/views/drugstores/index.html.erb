<p id="notice"><%= notice %></p>

<h1>Drugstores</h1>

<table class='table table-bordered table-hover'>
  <thead>
    <tr>
      <th><%= Drugstore.human_attribute_name :name %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drugstores.each do |drugstore| %>
      <tr>
        <td><%= drugstore.name %></td>
        <td><%= link_to 'Show', drugstore %></td>
        <td><%= link_to 'Edit', edit_drugstore_path(drugstore) %></td>
        <td><%= link_to 'Destroy', drugstore, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Drugstore', new_drugstore_path %>
