<%= link_to t('helpers.link.back'), records_path, class: 'btn btn-info', role: :button %>
<% case controller.action_name %>
<% when 'edit' %>
  <%= link_to t('helpers.link.show'), record_path,
              class: 'btn btn-info', role: :button %>
  <%= link_to t('helpers.link.delete'), record_path, method: :delete,
              data: {confirm: t('helpers.notice.delete_confirm')},
              class: 'btn btn-danger', role: :button %>
<% when 'show' %>
  <%= link_to t('helpers.link.edit'), edit_record_path,
              class: 'btn btn-info', role: :button %>
  <%= link_to t('helpers.link.delete'), record_path, method: :delete,
              data: {confirm: t('helpers.notice.delete_confirm')},
              class: 'btn btn-danger', role: :button %>
<% end %>

