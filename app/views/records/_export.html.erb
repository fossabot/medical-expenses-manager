<%= form_tag(records_export_path, method: :get) do %>
  <div class="container box_radius">
    <div class="row">
      <div class="col-xs-4">
        <%= select_tag 'export[encoding]',
                       options_for_select('UTF-8' => 'utf-8', 'Shift-JIS' => 'sjis'),
                       class: 'form-control' %>
        <% records.each do |record| %>
          <%= hidden_field_tag 'export[ids][]', record.id %>
        <% end %>
      </div>
      <div class="col-xs-2">
        <%= submit_tag :CSV出力, class: 'btn btn-success', name: nil %>
      </div>
    </div>
  </div>
<% end %>