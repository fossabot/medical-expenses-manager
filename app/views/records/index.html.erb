<p id="notice"><%= notice %></p>

<h1>Records</h1>

<table class='table table-bordered table-hover'>
  <thead>
    <tr>
      <th><%= Record.human_attribute_name :date %></th>
      <th><%= Record.human_attribute_name :cost %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.date %></td>
        <td><%= record.cost %></td>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

