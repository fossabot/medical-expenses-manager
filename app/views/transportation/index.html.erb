<p id="notice"><%= notice %></p>

<h1>Transportation</h1>

<table class='table table-bordered table-hover'>
  <thead>
    <tr>
      <th><%= Transportation.human_attribute_name :name %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transportation.each do |transportation| %>
      <tr>
        <td><%= transportation.name %></td>
        <td><%= link_to 'Show', transportation %></td>
        <td><%= link_to 'Edit', edit_transportation_path(transportation) %></td>
        <td><%= link_to 'Destroy', transportation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transportation', new_transportation_path %>
