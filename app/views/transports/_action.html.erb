<%= link_to t('helpers.link.back'), transports_path, class: 'btn btn-info', role: :button %>
<% case controller.action_name %>
<% when 'edit' %>
  <%= link_to t('helpers.link.show'), transport_path,
              class: 'btn btn-info', role: :button %>
  <%= link_to t('helpers.link.delete'), transport_path, method: :delete,
              data: {confirm: t('helpers.notice.delete_confirm')},
              class: 'btn btn-danger', role: :button %>
<% when 'show' %>
  <%= link_to t('helpers.link.edit'), edit_transport_path,
              class: 'btn btn-info', role: :button %>
  <%= link_to t('helpers.link.delete'), transport_path, method: :delete,
              data: {confirm: t('helpers.notice.delete_confirm')},
              class: 'btn btn-danger', role: :button %>
<% end %>

