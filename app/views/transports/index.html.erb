<h1>
  <%= t('helpers.title.list', models: Transport.model_name.human.pluralize(I18n.locale)) %>
</h1>

<%= paginate @transports %>
<table class='table table-bordered table-hover table-striped'>
  <thead>
  <tr>
    <th><%= Transport.human_attribute_name :name %></th>
  </tr>
  </thead>

  <tbody>
  <% @transports.each do |transport| %>
    <tr>
      <td><%= link_to transport.name, transport_path(transport) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @transports %>

<br>

<%= link_to t('helpers.link.new'), new_transport_path %>
